<launch>
  <!-- <arg name="fcu_url" default="udp://:14540@localhost:14557"/>
  <arg name="gcs_url" default="" />  -->  <!-- GCS link is provided by SITL -->
  <arg name="manager" default="local_planner_manager"/>
  <arg name="pointcloud_topics" default="[/realsense_cam/depth/points]"/>
  <!-- <arg name="tgt_system" default="1" />
  <arg name="tgt_component" default="1" /> -->
  <arg name="world_file_name" default="maze_with_obstacles2" />
  <arg name="world_path" default="$(find avoidance)/sim/worlds/$(arg world_file_name).world" />
  <!-- <arg name="world_path" default="/home/sgeiger/software/XTDrone/sitl_config/worlds/$(arg world_file_name).world" /> -->

  <!-- Launch static transform publishers -->
  <node pkg="tf" type="static_transform_publisher" name="tf_depth_camera"
          args="0 0 0 -1.57 0 -1.57 fcu realsense_cam_link 10"/>

  <!-- Launch MavROS -->
  <include file="$(find avoidance)/launch/avoidance_sitl_mavros.launch" >
      <arg name="model" value="px4ir_sensors" />
      <arg name="world_path" value="$(arg world_path)" />
  </include>

  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find local_planner)/resource/custom_rosconsole.conf"/>

  <!-- Launch Local Planner -->
  <node pkg="nodelet" type="nodelet" name="$(arg manager)" args="manager" output="screen"/>
  <node name="local_planner_nodelet" pkg="nodelet" type="nodelet" args="standalone LocalPlannerNodelet" output="screen" >
    <param name="goal_x_param" value="0" />
    <param name="goal_y_param" value="0" />
    <param name="goal_z_param" value="4" />
    <param name="make_2d" value="true" />
    <!-- <param name="world_name" value="$(find avoidance)/sim/worlds/$(arg world_file_name).yaml" /> -->
    <rosparam param="pointcloud_topics" subst_value="True">$(arg pointcloud_topics)</rosparam>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find local_planner)/resource/local_planner.rviz" />

</launch>
